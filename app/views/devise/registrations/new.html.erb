<div class="max-w-md mx-auto px-4">
  <div class="card">
    <h1 class="text-2xl font-bold mb-4">Sign Up</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :name, "Name", class: "form-label" %>
        <%= f.text_field :name, autofocus: true, placeholder: "Your name", class: "form-input" %>
      </div>

      <div class="mb-4">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "your@email.com", class: "form-input" %>
      </div>
      
      <div class="mb-4">
        <%= f.label :avatar, "Profile Picture (optional)", class: "form-label" %>
        <%= f.file_field :avatar, accept: "image/*", class: "form-input" %>
        <small class="form-hint">JPEG, PNG, or GIF. Max 5MB</small>
      </div>

      <div class="mb-4">
        <%= f.label :password, "Password", class: "form-label" %>
        <% if @minimum_password_length %>
          <small class="form-hint">(<%= @minimum_password_length %> characters minimum)</small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Enter password", class: "form-input" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: "form-input" %>
      </div>

      <div class="flex gap-2">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
        <%= link_to "Back to Posts", root_path, class: "btn btn-secondary" %>
      </div>
    <% end %>

    <div class="mt-4 pt-4 border-t border-gray-200">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
