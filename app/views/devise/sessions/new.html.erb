<div class="max-w-md mx-auto px-4">
  <div class="card">
    <h1 class="text-2xl font-bold mb-4">Login</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
      <div class="mb-4">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "your@email.com", class: "form-input" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, "Password", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Enter password", class: "form-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4">
          <label class="flex items-center gap-2">
            <%= f.check_box :remember_me, class: "form-checkbox" %>
            <span class="text-sm text-gray-700">Remember me</span>
          </label>
        </div>
      <% end %>

      <div class="flex gap-2">
        <%= f.submit "Log in", class: "btn btn-primary" %>
        <%= link_to "Back to Posts", root_path, class: "btn btn-secondary" %>
      </div>
    <% end %>

    <div class="mt-4 pt-4 border-t border-gray-200">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
