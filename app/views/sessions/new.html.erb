<div class="max-w-md mx-auto px-4">
  <div class="card">
    <h1 class="text-2xl font-bold mb-4">Login</h1>
    
    <%= form_with url: login_path, method: :post, data: { turbo: false } do |f| %>
      <div class="mb-4">
        <label for="user_id" class="form-label">Select User:</label>
        <select name="user_id" id="user_id" class="form-input">
          <option value="">-- Choose a user --</option>
          <% @users.each do |user| %>
            <option value="<%= user.id %>"><%= user.name %> (<%= user.email %>)</option>
          <% end %>
        </select>
      </div>

      <% if @users.empty? %>
        <p class="text-gray-600 mb-2 text-sm">No users available. Create users in the Rails console first:</p>
        <pre class="bg-gray-100 p-3 rounded-md overflow-x-auto text-xs mb-4">User.create(name: "John Doe", email: "john@example.com")</pre>
      <% end %>

      <div class="flex gap-2">
        <%= f.submit "Login", class: "btn btn-primary" %>
        <%= link_to "Back to Posts", root_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
