<% content_for :page_title, "Post Management" %>

<!-- Filters -->
<div class="bg-white rounded-lg shadow p-4 mb-6">
  <%= form_with url: admin_posts_path, method: :get, class: "flex gap-4 items-end" do |f| %>
    <div class="flex-1">
      <%= f.text_field :search, value: params[:search], placeholder: "Search posts...", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>
    
    <div>
      <%= f.select :filter, options_for_select([['All Posts', ''], ['Published', 'published'], ['Drafts', 'draft'], ['No Cover Image', 'no_cover']], params[:filter]), {}, class: "px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" %>
    </div>
    
    <%= f.submit "Filter", class: "btn btn-primary" %>
    <%= link_to "Clear", admin_posts_path, class: "btn btn-secondary" %>
  <% end %>
</div>

<!-- Posts Table -->
<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Post</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Author</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Comments</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @posts.each do |post| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4">
            <div>
              <p class="font-medium text-gray-900"><%= link_to post.title, post_path(post), class: "hover:text-blue-600" %></p>
              <p class="text-sm text-gray-500"><%= truncate(post.body, length: 60) %></p>
            </div>
          </td>
          <td class="px-6 py-4 text-sm text-gray-900">
            <%= post.user.name %>
          </td>
          <td class="px-6 py-4">
            <div class="flex items-center gap-2">
              <span class="px-2 py-1 text-xs rounded-full <%= post.published_at? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                <%= post.published_at? ? 'Published' : 'Draft' %>
              </span>
              <% unless post.cover_image.attached? %>
                <span class="text-xs text-gray-400" title="No cover image">ðŸ“·</span>
              <% end %>
            </div>
          </td>
          <td class="px-6 py-4 text-sm text-gray-500">
            <%= post.comments.count %>
          </td>
          <td class="px-6 py-4 text-sm text-gray-500">
            <%= time_ago_in_words(post.created_at) %> ago
          </td>
          <td class="px-6 py-4 text-right text-sm space-x-3">
            <%= link_to "View", post_path(post), class: "text-blue-600 hover:text-blue-900" %>
            <%= link_to "Edit", edit_post_path(post), class: "text-indigo-600 hover:text-indigo-900" %>
            <%= button_to "Delete", admin_post_path(post), method: :delete, 
              class: "text-red-600 hover:text-red-900",
              form: { data: { turbo_confirm: "Are you sure you want to delete this post?" } } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
