<% content_for :page_title, "Comment Moderation" %>

<!-- Search -->
<div class="bg-white rounded-lg shadow p-4 mb-6">
  <%= form_with url: admin_comments_path, method: :get, class: "flex gap-4" do |f| %>
    <div class="flex-1">
      <%= f.text_field :search, value: params[:search], placeholder: "Search comments...", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>
    <%= f.submit "Search", class: "btn btn-primary" %>
    <%= link_to "Clear", admin_comments_path, class: "btn btn-secondary" %>
  <% end %>
</div>

<!-- Comments List -->
<div class="bg-white rounded-lg shadow divide-y divide-gray-200">
  <% @comments.each do |comment| %>
    <div class="p-6 hover:bg-gray-50">
      <div class="flex items-start gap-4">
        <div class="flex-1">
          <div class="flex items-start justify-between mb-2">
            <div>
              <p class="font-medium text-gray-900"><%= comment.user.name %></p>
              <p class="text-xs text-gray-500"><%= comment.user.email %></p>
            </div>
            <span class="text-xs text-gray-400"><%= time_ago_in_words(comment.created_at) %> ago</span>
          </div>
          
          <p class="text-gray-700 mb-2"><%= simple_format(comment.body) %></p>
          
          <p class="text-sm text-gray-500">
            On post: <%= link_to comment.post.title, post_path(comment.post), class: "text-blue-600 hover:text-blue-800" %>
          </p>
        </div>
        
        <div class="flex flex-col gap-2">
          <%= link_to "View", post_path(comment.post, anchor: "comment-#{comment.id}"), class: "text-xs text-blue-600 hover:text-blue-900" %>
          <%= button_to "Delete", admin_comment_path(comment), method: :delete, 
            class: "text-xs text-red-600 hover:text-red-900",
            form: { data: { turbo_confirm: "Delete this comment?" } } %>
        </div>
      </div>
    </div>
  <% end %>
</div>
