<div class="card" style="padding: 1.75rem; background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(255,255,255,0.95) 100%); position: relative; overflow: hidden;">
  <div style="position: absolute; top: 0; left: 0; width: 5px; height: 100%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
  
  <div style="display: flex; justify-content: space-between; align-items: start; gap: 2rem;">
    <div style="flex: 1;">
      <div style="display: flex; align-items: center; gap: 0.75rem; margin-bottom: 0.75rem;">
        <% if post.published_at %>
          <span style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); color: white; padding: 0.35rem 0.85rem; border-radius: 20px; font-size: 0.75rem; font-weight: 600;">âœ… Published</span>
        <% else %>
          <span style="background: linear-gradient(135deg, #ffa726 0%, #fb8c00 100%); color: white; padding: 0.35rem 0.85rem; border-radius: 20px; font-size: 0.75rem; font-weight: 600;">ğŸ“ Draft</span>
        <% end %>
        <span style="color: #a0aec0; font-size: 0.85rem;">
          <% if post.published_at %>
            <%= time_ago_in_words(post.published_at) %> ago
          <% else %>
            Created <%= time_ago_in_words(post.created_at) %> ago
          <% end %>
        </span>
      </div>
      
      <%= link_to post_path(post), style: "text-decoration: none;" do %>
        <h3 style="margin: 0 0 0.75rem 0; font-size: 1.5rem; font-weight: 700; color: #2d3748; transition: color 0.3s ease;" onmouseover="this.style.color='#667eea'" onmouseout="this.style.color='#2d3748'">
          <%= post.title %>
        </h3>
      <% end %>
      
      <p style="margin: 0 0 1rem 0; color: #718096; line-height: 1.6; font-size: 1rem;">
        <%= truncate(post.body, length: 150, separator: ' ') %>
      </p>
      
      <div style="display: flex; align-items: center; gap: 0.75rem; flex-wrap: wrap;">
        <span style="font-size: 0.9rem; color: #4a5568; font-weight: 500;">ğŸ‘¤ <%= post.user&.name || "Unknown" %></span>
        <span style="background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%); color: #1976d2; padding: 0.35rem 0.85rem; border-radius: 20px; font-size: 0.8rem; font-weight: 600;">ğŸ’¬ <%= post.comments_count %> <%= post.comments_count == 1 ? 'comment' : 'comments' %></span>
        <% if current_user&.role == "admin" %>
          <span style="background: #fef5e7; color: #f39c12; padding: 0.25rem 0.65rem; border-radius: 12px; font-size: 0.75rem; font-weight: 600;">â­ ADMIN</span>
        <% end %>
      </div>
    </div>
    
    <div style="display: flex; flex-direction: column; gap: 0.65rem; align-items: flex-end;">
      <%= link_to "ğŸ‘ View", post_path(post), class: "btn btn-primary", style: "padding: 0.6rem 1.25rem; font-size: 0.9rem; min-width: 120px; text-align: center;" %>
      <% if can_edit_post?(post) %>
        <%= link_to "âœï¸ Edit", edit_post_path(post), class: "btn btn-warning", style: "padding: 0.6rem 1.25rem; font-size: 0.9rem; min-width: 120px; text-align: center;" %>
        <%= button_to "ğŸ—‘ Delete", post_path(post), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this post?" }, class: "btn btn-danger", style: "padding: 0.6rem 1.25rem; font-size: 0.9rem; min-width: 120px;" %>
      <% end %>
    </div>
  </div>
</div>
