<div class="container">
  <div class="card" style="max-width: 900px; margin: 0 auto 2.5rem; background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(255,255,255,0.95) 100%); position: relative; overflow: hidden;">
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 6px; background: linear-gradient(90deg, #667eea 0%, #764ba2 50%, #f093fb 100%);"></div>
    
    <div style="margin-bottom: 2rem;">
      <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1.5rem;">
        <% if @post.published_at %>
          <span style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); color: white; padding: 0.5rem 1.25rem; border-radius: 25px; font-size: 0.85rem; font-weight: 600;">âœ… Published</span>
        <% else %>
          <span style="background: linear-gradient(135deg, #ffa726 0%, #fb8c00 100%); color: white; padding: 0.5rem 1.25rem; border-radius: 25px; font-size: 0.85rem; font-weight: 600;">ğŸ“ Draft</span>
        <% end %>
        <span style="color: #a0aec0; font-size: 0.9rem;">
          <%= @post.published_at&.strftime("%B %d, %Y at %I:%M %p") || "Created #{time_ago_in_words(@post.created_at)} ago" %>
        </span>
      </div>
      
      <h1 style="margin: 0 0 1.5rem 0; font-size: 2.75rem; font-weight: 700; color: #2d3748; line-height: 1.2;"><%= @post.title %></h1>
      
      <div style="display: flex; align-items: center; gap: 1rem; padding: 1.25rem; background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%); border-radius: 12px; margin-bottom: 2rem;">
        <div style="width: 48px; height: 48px; border-radius: 50%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-weight: 700; font-size: 1.25rem;">
          <%= @post.user&.name&.first&.upcase || "?" %>
        </div>
        <div>
          <div style="font-weight: 600; color: #2d3748; font-size: 1.05rem;"><%= @post.user&.name || "Unknown Author" %></div>
          <div style="color: #718096; font-size: 0.9rem;"><%= @post.user&.email %></div>
        </div>
      </div>
    </div>

    <div style="margin-bottom: 3rem; line-height: 1.8; font-size: 1.1rem; color: #4a5568;">
      <%= simple_format(@post.body) %>
    </div>
    
    <div style="display: flex; gap: 1rem; padding-top: 2rem; border-top: 2px solid #e2e8f0;">
      <%= link_to "â† Back to Posts", posts_path, class: "btn btn-secondary", style: "padding: 0.75rem 1.5rem;" %>
      <% if can_edit_post?(@post) %>
        <%= link_to "âœï¸ Edit", edit_post_path(@post), class: "btn btn-warning", style: "padding: 0.75rem 1.5rem;" %>
        <%= button_to "ğŸ—‘ Delete", post_path(@post), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this post?" }, class: "btn btn-danger", style: "padding: 0.75rem 1.5rem; margin-left: auto;" %>
      <% end %>
    </div>
  </div>

  <!-- Comments Section -->
  <div class="card" style="max-width: 900px; margin: 0 auto; background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(255,255,255,0.95) 100%);">
    <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 2rem;">
      <h2 style="margin: 0; font-size: 2rem; font-weight: 700; color: #2d3748;">ğŸ’¬ Comments</h2>
      <span style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 0.35rem 0.85rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600;"><%= @post.comments_count %></span>
    </div>
    
    <!-- Comment Form -->
    <% if current_user %>
      <div style="margin-bottom: 3rem; padding: 2rem; background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%); border-radius: 16px; border: 2px dashed #cbd5e0;">
        <%= form_with model: [@post, @post.comments.build], style: "display: flex; flex-direction: column; gap: 1.25rem;" do |f| %>
          <div>
            <label style="display: block; margin-bottom: 0.75rem; font-weight: 600; color: #2d3748; font-size: 1.05rem;">âœï¸ Add your comment</label>
            <%= f.text_area :body, rows: 4, placeholder: "Share your thoughts...", style: "width: 100%; padding: 1rem 1.25rem; border: 2px solid #e2e8f0; border-radius: 12px; font-family: inherit; font-size: 1rem; line-height: 1.6; transition: all 0.3s ease; resize: vertical;", onfocus: "this.style.borderColor='#667eea'; this.style.boxShadow='0 0 0 3px rgba(102,126,234,0.1)'", onblur: "this.style.borderColor='#e2e8f0'; this.style.boxShadow='none'" %>
          </div>
          <div>
            <%= f.submit "ğŸ’¬ Post Comment", class: "btn btn-success", style: "padding: 0.85rem 2rem; font-size: 1.05rem; font-weight: 600;" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div style="margin-bottom: 3rem; padding: 2rem; background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%); border-radius: 16px; border: 2px solid #ffd93d; text-align: center;">
        <p style="margin: 0; color: #856404; font-size: 1.05rem; font-weight: 500;">
          ğŸ”’ Please <%= link_to "login", login_path, style: "color: #667eea; font-weight: 600; text-decoration: underline;" %> to leave a comment
        </p>
      </div>
    <% end %>

    <!-- Comments List -->
    <div style="display: flex; flex-direction: column; gap: 1.5rem;">
      <% @comments.each do |comment| %>
        <div style="padding: 1.75rem; background: white; border: 2px solid #e2e8f0; border-radius: 16px; transition: all 0.3s ease;" onmouseover="this.style.borderColor='#cbd5e0'; this.style.boxShadow='0 8px 25px rgba(0,0,0,0.08)'" onmouseout="this.style.borderColor='#e2e8f0'; this.style.boxShadow='none'">
          <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem;">
            <div style="display: flex; align-items: center; gap: 1rem;">
              <div style="width: 40px; height: 40px; border-radius: 50%; background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); display: flex; align-items: center; justify-content: center; color: white; font-weight: 700; font-size: 1.1rem;">
                <%= comment.author_name.first.upcase %>
              </div>
              <div>
                <strong style="color: #2d3748; font-size: 1rem;"><%= comment.author_name %></strong>
                <div style="color: #a0aec0; font-size: 0.85rem;">
                  <%= time_ago_in_words(comment.created_at) %> ago
                </div>
              </div>
            </div>
            <% if current_user && (current_user.id == comment.user_id || current_user.role == "admin") %>
              <%= button_to "ğŸ—‘ Delete", post_comment_path(@post, comment), method: :delete, data: { turbo_confirm: "Delete this comment?" }, class: "btn btn-danger", style: "padding: 0.5rem 1rem; font-size: 0.85rem;" %>
            <% end %>
          </div>
          <p style="margin: 0; color: #4a5568; line-height: 1.7; font-size: 1rem;"><%= comment.body %></p>
        </div>
      <% end %>

      <% if @comments.empty? %>
        <div style="text-align: center; padding: 4rem 2rem; background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%); border-radius: 16px; border: 2px dashed #cbd5e0;">
          <div style="font-size: 3.5rem; margin-bottom: 1rem;">ğŸ’­</div>
          <p style="color: #718096; font-size: 1.15rem; margin: 0; font-style: italic;">No comments yet. Start the conversation!</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
