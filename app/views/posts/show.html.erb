<h1><%= @post.title %></h1>

<div style="margin-bottom: 2rem;">
  <p style="color: #666; font-size: 0.9rem;">
    By <%= @post.user&.name || "Unknown" %> â€¢ Published: <%= @post.published_at&.strftime("%B %d, %Y %I:%M %p") || "Not published" %>
  </p>
</div>

<div style="margin-bottom: 2rem; line-height: 1.6;">
  <%= simple_format(@post.body) %>
</div>

<!-- Comments Section -->
<div style="margin-top: 3rem; padding-top: 2rem; border-top: 2px solid #ddd;">
  <h2 style="margin-bottom: 1.5rem;">Comments (<%= @post.comments.count %>)</h2>
  
  <!-- Comment Form -->
  <div style="margin-bottom: 2rem; padding: 1.5rem; background: #f9f9f9; border-radius: 8px;">
    <%= form_with model: [@post, @post.comments.build], style: "display: flex; flex-direction: column; gap: 1rem;" do |f| %>
      <div>
        <label style="display: block; margin-bottom: 0.5rem; font-weight: bold;">Add a comment:</label>
        <%= f.text_area :body, rows: 3, placeholder: "Write your comment here...", style: "width: 100%; padding: 0.5rem; border: 1px solid #ddd; border-radius: 4px; font-family: inherit;" %>
      </div>
      <div>
        <%= f.submit "Post Comment", style: "padding: 0.5rem 1.5rem; background: #28a745; color: white; border: none; cursor: pointer; border-radius: 4px; font-weight: bold;" %>
      </div>
    <% end %>
  </div>

  <!-- Comments List -->
  <div style="display: flex; flex-direction: column; gap: 1.5rem;">
    <% @post.comments.order(created_at: :desc).each do |comment| %>
      <div style="padding: 1rem; background: #fff; border: 1px solid #ddd; border-radius: 8px;">
        <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 0.5rem;">
          <div>
            <strong style="color: #333;"><%= comment.author_name %></strong>
            <span style="color: #999; font-size: 0.85rem; margin-left: 0.5rem;">
              <%= time_ago_in_words(comment.created_at) %> ago
            </span>
          </div>
          <% if current_user && (current_user.id == comment.user_id || current_user.role == "admin") %>
            <%= button_to "Delete", post_comment_path(@post, comment), method: :delete, data: { turbo_confirm: "Are you sure?" }, style: "background: #dc3545; color: white; border: none; padding: 0.25rem 0.75rem; border-radius: 4px; cursor: pointer; font-size: 0.85rem;" %>
          <% end %>
        </div>
        <p style="margin: 0; color: #555; line-height: 1.5;"><%= comment.body %></p>
      </div>
    <% end %>

    <% if @post.comments.empty? %>
      <p style="color: #999; font-style: italic; text-align: center; padding: 2rem;">No comments yet. Be the first to comment!</p>
    <% end %>
  </div>
</div>

<div style="margin-top: 2rem;">
  <% if can_edit_post?(@post) %>
    <%= link_to "Edit", edit_post_path(@post), style: "padding: 0.5rem 1rem; background: #ffc107; color: white; text-decoration: none; border-radius: 4px; margin-right: 0.5rem; display: inline-block;" %>
    <%= button_to "Delete", post_path(@post), method: :delete, data: { turbo_confirm: "Are you sure?" }, style: "background: #dc3545; color: white; border: none; padding: 0.5rem 1rem; border-radius: 4px; cursor: pointer; margin-right: 0.5rem;" %>
  <% end %>
  <%= link_to "Back to Posts", posts_path, style: "padding: 0.5rem 1rem; background: #6c757d; color: white; text-decoration: none; border-radius: 4px; display: inline-block;" %>
</div>
